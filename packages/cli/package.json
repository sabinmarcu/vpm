{
  "name": "@nvpm/cli",
  "version": "1.0.0",
  "description": "CLI for nvpm",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "author": "Sabin Marcu <sabinmarcu@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@nvpm/config": "^1.0.0",
    "@nvpm/navigation": "^1.0.0",
    "@nvpm/module-groups": "^1.0.0",    
    "@nvpm/module-home": "^1.0.0",
    "ink": "^2.7.1",
    "ink-big-text": "^1.1.0",
    "ink-gradient": "^1.0.0",
    "react": "^16.13.1"
  },
  "bin": {
    "nvpm": "./bin/nvpm"
  },
  "scripts": {
